@model ScooterRentSystem.Web.Models.ViewModels.Rent.RentAddViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>RentAddViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ScooterId" class="control-label"></label>
                @Html.DropDownListFor(model => model.ScooterId, new SelectList(Model.Scooters, "Id", "ScooterLabel"), new { style = "width: 100%;", @class = "form-control" })
                <span asp-validation-for="ScooterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonId" class="control-label"></label>
                @Html.DropDownListFor(model => model.PersonId, new SelectList(Model.People, "Id", "FullName"), new { style = "width: 100%;", @class = "form-control" })
                <span asp-validation-for="PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
